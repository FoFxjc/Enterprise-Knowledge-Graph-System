package mtech.irs.ekgs.kie.rules.search

import mtech.irs.ekgs.model.*
import mtech.irs.ekgs.frameworx.*

rule "recommend solution suggestion"
activation-group "search-suggestion"
salience 10
when
    SearchInput( value != null && value.startsWith("Recommend a solution") )
    sr : SearchResults()
then
    sr.addSuggestion("Recommend a solution fulfil Request-to-Answer");
end

rule "recommend solution request-to-answer"
activation-group "search-suggestion"
salience 20
when
    SearchInput( value != null && value.startsWith("Recommend a solution fulfil Request-to-Answer") )
    sr : SearchResults()
then
    sr.addSuggestion("Recommend a solution fulfil Request-to-Answer with lowest cost");
    sr.addSuggestion("Recommend a solution fulfil Request-to-Answer with shortest response time");
end
